

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.maxim.diabetesireland.FoodIntakeFragment"
    tools:showIn="@layout/activity_food_intake">



    <Button
        android:layout_width="260sp"
        android:layout_height="60sp"
        android:background="@drawable/customwaterbutton"
        android:id="@+id/waterbutton"
        android:layout_marginBottom="184dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="230sp"
        android:layout_height="60sp"
        android:id="@+id/fruitvegbutton"
        android:background="@drawable/customfgbutton"
        android:layout_above="@+id/waterbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:background="@drawable/customcarbbutton"
        android:id="@+id/carbutton"
        android:layout_above="@+id/fruitvegbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:background="@drawable/customdairybutton"
        android:id="@+id/dairybutton"
        android:layout_above="@+id/carbutton"
        android:layout_toRightOf="@+id/space"
        android:layout_toEndOf="@+id/space" />

    <Button
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:background="@drawable/custommeatbutton"
        android:id="@+id/proteinbutton"
        android:layout_alignTop="@+id/dairybutton"
        android:layout_toLeftOf="@+id/space"
        android:layout_toStartOf="@+id/space" />

    <Button
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:background="@drawable/customalcoholbutton"
        android:id="@+id/alcoholbutton"
        android:layout_above="@+id/proteinbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:background="@drawable/customtreatsbutton"
        android:id="@+id/treatsbutton"
        android:layout_above="@+id/alcoholbutton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/space"
        android:layout_above="@+id/treatsbutton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
