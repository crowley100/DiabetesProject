<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.maxim.diabetesireland.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@drawable/background"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please fill out the fields below"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView2"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/view"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gender"
            android:textSize="30sp"
            android:id="@+id/textView21"
            android:layout_alignBottom="@+id/femaleButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_marginTop="5dp"
            android:background="#dbdbdb"
            android:textColor="#ffffff"
            android:id="@+id/maleButton"
            android:layout_alignBottom="@+id/textView21"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=" "
            android:textSize="30sp"
            android:id="@+id/textView27"
            android:layout_alignBottom="@+id/maleButton"
            android:gravity="center"
            android:layout_toLeftOf="@+id/femaleButton"
            android:layout_toRightOf="@+id/maleButton"
            android:layout_toEndOf="@+id/maleButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:background="#dbdbdb"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:id="@+id/femaleButton"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <EditText
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/heightField"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weightField"
        android:gravity="center"
        android:layout_above="@+id/heightField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="#432687"
        android:id="@+id/continueButton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/activeRadio"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to ..."
        android:textSize="35sp"
        android:id="@+id/textView22"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textSize="30sp"
        android:id="@+id/textView26"
        android:layout_above="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/textView24"
        android:layout_above="@+id/heightField"
        android:layout_toLeftOf="@+id/activeRadio"
        android:layout_toStartOf="@+id/activeRadio" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintain your health?"
        android:textSize="20sp"
        android:id="@+id/healthRadio"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be more healthy?"
        android:textSize="20sp"
        android:id="@+id/weightRadio"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/healthRadio"
        android:layout_alignRight="@+id/textView22"
        android:layout_alignEnd="@+id/textView22" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be more active?"
        android:id="@+id/activeRadio"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/weightRadio"
        android:layout_alignRight="@+id/weightRadio"
        android:layout_alignEnd="@+id/weightRadio" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ageField"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="30sp"
        android:id="@+id/textView23"
        android:gravity="center_horizontal"
        android:layout_above="@+id/weightField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
