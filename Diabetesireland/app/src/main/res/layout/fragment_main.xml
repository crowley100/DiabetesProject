<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.maxim.diabetesireland.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/loginbg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/background"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please fill out the fields below"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/femaleButton"
        android:layout_alignEnd="@+id/femaleButton"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Submit"
        android:background="#432687"
        android:textColor="#ffffff"
        android:id="@+id/continueButton"
        android:layout_below="@+id/radioButton2"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:background="#909090"
        android:textColor="#ffffff"
        android:id="@+id/maleButton"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:background="#909090"
        android:textColor="#ffffff"
        android:id="@+id/femaleButton"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorners"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:textSize="25sp"
        android:text="   Day/Month/Year "
        android:gravity="center"
        android:layout_above="@+id/textView24"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/continueButton"
        android:layout_alignStart="@+id/continueButton" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorners"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="25sp"
        android:text="kilograms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_above="@+id/textView26"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:background="@drawable/roundcorners"
        android:ems="10"
        android:id="@+id/editText4"
        android:textSize="25sp"
        android:text="meters"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:gravity="center" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to lose weight?"
        android:id="@+id/radioButton"
        android:textSize="20sp"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to be more active?"
        android:textSize="20sp"
        android:id="@+id/radioButton2"
        android:gravity="center"
        android:layout_below="@+id/radioButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:textSize="35sp"
        android:id="@+id/textView22"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="30sp"
        android:id="@+id/textView23"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textSize="30sp"
        android:id="@+id/textView26"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="30sp"
        android:id="@+id/textView24"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="30sp"
        android:id="@+id/textView21"
        android:layout_alignBottom="@+id/femaleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  or"
        android:textSize="30sp"
        android:id="@+id/textView27"
        android:layout_alignBottom="@+id/maleButton"
        android:gravity="center"
        android:layout_toLeftOf="@+id/femaleButton"
        android:layout_toRightOf="@+id/maleButton"
        android:layout_toEndOf="@+id/maleButton" />

</RelativeLayout>
