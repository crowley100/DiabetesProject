<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.maxim.diabetesireland.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/loginbg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/background"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please fill out the fields below"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView2"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Submit"
        android:background="#432687"
        android:textColor="#ffffff"
        android:id="@+id/continueButton"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/view">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gender"
            android:textSize="30sp"
            android:id="@+id/textView21"
            android:layout_alignBottom="@+id/femaleButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_marginTop="5dp"
            android:background="#dbdbdb"
            android:textColor="#ffffff"
            android:id="@+id/maleButton"
            android:layout_alignBottom="@+id/textView21"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=" "
            android:textSize="30sp"
            android:id="@+id/textView27"
            android:layout_alignBottom="@+id/maleButton"
            android:gravity="center"
            android:layout_toLeftOf="@+id/femaleButton"
            android:layout_toRightOf="@+id/maleButton"
            android:layout_toEndOf="@+id/maleButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:background="#dbdbdb"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:id="@+id/femaleButton"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorners"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weightField"
        android:backgroundTint="#ffffff"
        android:hint="kg/lb"
        android:textSize="25sp"
        android:layout_above="@+id/textView26"
        android:gravity="center"
        android:layout_alignLeft="@+id/continueButton"
        android:layout_alignStart="@+id/continueButton"
        android:layout_toLeftOf="@+id/spinner2"
        android:layout_toStartOf="@+id/spinner2"/>

    <EditText
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="cm/ft"
        android:textSize="25sp"
        android:backgroundTint="#ffffff"
        android:background="@drawable/roundcorners"
        android:ems="10"
        android:id="@+id/heightField"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/weightField"
        android:layout_alignStart="@+id/weightField"
        android:gravity="center"
        android:layout_toLeftOf="@+id/spinner2"
        android:layout_toStartOf="@+id/spinner2" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to lose weight?"
            android:id="@+id/weightRadio"
            android:textSize="20sp"
            android:layout_below="@+id/textView22"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to be more active?"
            android:textSize="20sp"

            android:id="@+id/activeRadio"
            android:gravity="center"
            android:layout_below="@+id/weightRadio"
            android:layout_centerHorizontal="true" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:textSize="35sp"
        android:id="@+id/textView22"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/heightField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:id="@+id/textView23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_above="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:id="@+id/textView26"
        android:layout_above="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/textView24"
        android:layout_alignBottom="@+id/weightField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorners"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ageField"
        android:backgroundTint="#ffffff"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_above="@+id/weightField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/weightField"
        android:layout_alignStart="@+id/weightField" />

    <Spinner
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorners"
        android:id="@+id/spinner2"
        android:hint="cm"
        android:layout_above="@+id/textView22"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView24" />

    <Spinner
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorners"
        android:id="@+id/spinner3"
        android:hint="cm"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignTop="@+id/textView24" />

</RelativeLayout>
